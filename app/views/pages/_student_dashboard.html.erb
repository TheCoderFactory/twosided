<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">Hi <%= current_user.student_profile.first_name %>, welcome to MOBEEAS</span>
  </div>
</div>
<h2>Tasks to complete</h2>
<div class="row">
	<div class="col 3 center-align">
		<div class="card">
	        <div class="card-content">

				<p class="bold">Complete your profile</p>
				<div class="card-action">
				<% if current_user.student_profile.complete? %>
					<a class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">person</i></a>
				<% else %>
					<a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">person</i></a>
				<% end %>
				</div>
			</div>
		</div>

	</div>
	<div class="col 3 center-align">
		<div class="card">
	        <div class="card-content">

				<p class="bold">Add your skills</p>
				<div class="card-action">
				<% if current_user.student_profile.complete? %>
					<a class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">label</i></a>
				<% else %>
					<a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">label</i></a>
				<% end %>
				</div>
			</div>
		</div>

	</div>
	<div class="col 3 center-align">
		<div class="card">
	        <div class="card-content">
				<p class="bold">Working with children</p>
				<div class="card-action">
					<% if current_user.student_profile.has_children_check? %>
						<a class="btn-floating btn-large waves-effect waves-light green"><i class="material-icons">accessibility</i></a>
					<% else %>
						<a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">accessibility</i></a>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="col 3 center-align">
		<div class="card">
	        <div class="card-content">
				<p class="bold">Complete induction</p>
				<div class="card-action">
					<a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">assignment_late</i></a>
				</div>
			</div>
		</div>
	</div>
</div>
<hr>
<h2>Current engagements</h2>
<p>No current engagements</p>
<hr>
<h2>Past engagements</h2>
<p>No past engagements</p>