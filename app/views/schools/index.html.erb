<h1>Listing schools</h1>
<%= form_tag(schools_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Find your school" %>
  <%= submit_tag "Search" %>
<% end %>

<table class="table">
    <tr>
      <th>Name</th>
      <th>Suburb</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @schools) do |school| %>
    <td><%= link_to school.name, school %></td>
    <td><%= school.suburb %></td>
    <td><%= school.state %></td>
    <td><%= school.school_type %></td>
    <td><%= link_to 'Connect', connect_your_school_path(school: school.id), method: :patch, class: 'btn btn-edit' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New School', new_school_path, class: 'btn btn-success' %>
</div>
